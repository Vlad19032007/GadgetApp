using System.Collections.ObjectModel;
using System.Threading.Tasks;
using Avalonia.Controls.ApplicationLifetimes;
using CommunityToolkit.Mvvm.ComponentModel;
using CommunityToolkit.Mvvm.Input;
using GadgetApp.Models;
using GadgetApp.Views;
using Avalonia; // Додано для доступу до Application.Current

namespace GadgetApp.ViewModels
{
    public partial class MainWindowViewModel : ObservableObject
    {
        [ObservableProperty]
        private ObservableCollection<Gadget> _gadgets;

        public MainWindowViewModel()
        {
            _gadgets = new ObservableCollection<Gadget>(Gadget.GetSampleGadgets());
        }

        [RelayCommand]
        private async Task AddGadget()
        {
            var newGadget = new Gadget();
            var viewModel = new AddEditGadgetViewModel(newGadget);

            var dialog = new AddEditGadgetWindow
            {
                DataContext = viewModel
            };

            // ----- ОСЬ ТУТ ВИПРАВЛЕННЯ -----
            // Використовуємо правильний спосіб доступу до MainWindow в Avalonia
            if (Application.Current?.ApplicationLifetime is IClassicDesktopStyleApplicationLifetime desktop)
            {
                var result = await dialog.ShowDialog<bool>(desktop.MainWindow);

                if (result)
                {
                    viewModel.UpdateGadgetFeatures();
                    Gadgets.Add(newGadget);
                }
            }
        }
    }
}