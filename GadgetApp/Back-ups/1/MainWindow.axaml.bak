<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:GadgetApp.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
        x:Class="GadgetApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Керування Гаджетами"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <!-- Глобальні стилі залишаються без змін -->
    <Window.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#505050"/>
        </Style>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#505050"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="CaretBrush" Value="#E0E0E0"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#505050"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Menu">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>
    </Window.Styles>

    <Window.DataContext>
      <vm:MainWindowViewModel/>
    </Window.DataContext>

    <!-- ОСНОВНА ЗМІНА: Спрощена структура Grid -->
    <!-- Тепер у нас 2 колонки: 3* для основної частини, 1* для бічної панелі -->
    <Grid ColumnDefinitions="3*, *" RowDefinitions="Auto, *, Auto" Margin="15">
        
        <!-- Меню тепер розтягується на 2 колонки -->
        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
            <MenuItem Header="Файл">
                <MenuItem Header="Завантажити з .csv"/>
                <MenuItem Header="Зберегти в .csv"/>
            </MenuItem>
            <MenuItem Header="Редагування">
                <MenuItem Header="Додати гаджет"/>
                <MenuItem Header="Редагувати обраний"/>
                <MenuItem Header="Видалити обраний"/>
            </MenuItem>
        </Menu>
        
        <!-- Таблиця тепер знаходиться в першій колонці -->
        <DataGrid Grid.Row="1" Grid.Column="0" Name="GadgetsGrid"
                  ItemsSource="{Binding Gadgets}" CanUserSortColumns="True"
                  IsReadOnly="True" AutoGenerateColumns="False" Margin="0,0,15,0"
                  Background="#2D2D2D" BorderThickness="0" CornerRadius="4"
                  GridLinesVisibility="None" Foreground="#E0E0E0">
            <DataGrid.Styles>
                <Style Selector="DataGridColumnHeader">
                    <Setter Property="Background" Value="#383838"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
                <Style Selector="DataGridRow:nth-child(odd)">
                    <Setter Property="Background" Value="#2D2D2D"/>
                </Style>
                <Style Selector="DataGridRow:nth-child(even)">
                    <Setter Property="Background" Value="#333333"/>
                </Style>
                 <Style Selector="DataGridRow:selected /template/ ContentPresenter">
                    <Setter Property="Background" Value="#0078D7" />
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </DataGrid.Styles>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Виробник" Binding="{Binding Manufacturer}" Width="*"/>
                <DataGridTextColumn Header="Ціна ($)" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="120"/>
                <DataGridTextColumn Header="Розмір екрану" Binding="{Binding ScreenSize}" Width="150"/>
                <DataGridTextColumn Header="Додаткові функції" Binding="{Binding FeaturesString}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Бічна панель тепер знаходиться в другій колонці -->
        <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"
                Background="#2D2D2D" BorderThickness="0"
                CornerRadius="8" Padding="15">
            <StackPanel Spacing="10">
                <TextBlock Text="Фільтрація та Пошук" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <TextBlock Text="Пошук за назвою:"/>
                <TextBox Watermark="Введіть назву..."/>

                <TextBlock Text="Компанія-виробник:" Margin="0,10,0,0"/>
                <ComboBox PlaceholderText="Всі компанії"/>

                <TextBlock Text="Тип гаджету:" Margin="0,10,0,0"/>
                <ComboBox PlaceholderText="Всі типи"/>

                <TextBlock Text="Ціна:" Margin="0,10,0,0"/>
                <Grid ColumnDefinitions="*,Auto,*">
                    <TextBox Grid.Column="0" Watermark="Від"/>
                    <TextBlock Grid.Column="1" Text="-" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBox Grid.Column="2" Watermark="До"/>
                </Grid>

                <TextBlock Text="Розмір екрану (ШхВ):" Margin="0,10,0,0"/>
                 <Grid ColumnDefinitions="*,Auto,*">
                    <TextBox Grid.Column="0" Watermark="Від (x1, y1)"/>
                    <TextBlock Grid.Column="1" Text="-" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBox Grid.Column="2" Watermark="До (x2, y2)"/>
                </Grid>

                <Button Content="Застосувати фільтри" HorizontalAlignment="Stretch" Margin="0,20,0,0"/>
                <Button Content="Скинути фільтри" HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
                
                <Button Content="Сортувати за ціною (Quick Sort)" HorizontalAlignment="Stretch" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>

        <!-- Кнопки тепер об'єднані в один блок під таблицею в першій колонці -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical" Spacing="10" Margin="0,15,15,0">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Command="{Binding AddGadgetCommand}" Content="Додати" Width="120" Height="40"/>
                <Button Content="Редагувати" Width="120" Height="40"/>
                <Button Content="Видалити" Width="120" Height="40"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Завантажити з .csv" Width="250" Height="40"/>
                <Button Content="Зберегти в .csv" Width="250" Height="40"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

