<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="GadgetApp.Views.MessageBoxView"
        Title="Повідомлення"
        CanResize="False"
        SizeToContent="Height"
        Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#505050"/>
        </Style>
    </Window.Styles>
    
    <StackPanel Margin="20" Spacing="15">
        <TextBlock Name="MessageTitle" FontSize="16" FontWeight="Bold" TextWrapping="Wrap"/>
        <TextBlock Name="MessageContent" TextWrapping="Wrap"/>
        <Button Name="OkButton" Content="OK" HorizontalAlignment="Right" Width="100" Height="35"/>
    </StackPanel>
</Window>